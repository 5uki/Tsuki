---
import type { SidebarCountItem } from '@contracts/content'

interface Props {
  categories: SidebarCountItem[]
}

const { categories } = Astro.props
---

<div class="tsuki-sidebar-card">
  <h3 class="tsuki-section-title">
    分类
  </h3>
  <div class="category-list">
    {categories.length > 0 ? (
      categories.map((category) => (
        <a href={`/groups/${category.slug}`} class="category-item">
          <span class="category-name">
            {category.name}
          </span>
          <span class="category-count">
            {category.count}
          </span>
        </a>
      ))
    ) : (
      <span class="empty-text">
        暂无分类
      </span>
    )}
  </div>
</div>

<style>
  .category-list {
    display: flex;
    flex-direction: column;
    gap: var(--tsuki-space-0-5);
  }

  .category-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: var(--tsuki-radius-md);
    border: 1px solid var(--tsuki-surface-border);
    background: var(--tsuki-surface-muted-soft);
    padding: var(--tsuki-space-0-5) var(--tsuki-space-0-75);
    color: var(--tsuki-fg);
    text-decoration: none;
    transition: background-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
                border-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
                transform var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .category-item:hover {
    transform: translateY(var(--tsuki-translate-1px));
    border-color: var(--tsuki-theme-accent);
    background: var(--tsuki-surface-muted-strong);
  }

  .category-name {
    font-size: var(--tsuki-sidebar-body-text-size);
    font-weight: 500;
  }
  @media (min-width: 640px) {
    .category-name {
      font-size: var(--tsuki-sidebar-body-text-size-desktop);
    }
  }

  .category-count {
    border-radius: var(--tsuki-radius-sm-2);
    background: var(--tsuki-theme-secondary);
    padding: var(--tsuki-space-0-125) var(--tsuki-space-0-5);
    font-size: var(--tsuki-text-xs);
    color: var(--tsuki-fg);
  }
  @media (min-width: 640px) {
    .category-count {
      font-size: var(--tsuki-text-2xs);
    }
  }

  .empty-text {
    font-size: var(--tsuki-sidebar-body-text-size);
    color: var(--tsuki-post-muted-fg);
  }
</style>
