---
import type { SidebarCountItem } from '@contracts/content'

interface Props {
  series: SidebarCountItem[]
}

const { series } = Astro.props
const VISIBLE_COUNT = 3
const hasMore = series.length > VISIBLE_COUNT
---

<div class="tsuki-sidebar-card">
  <h3 class="tsuki-section-title">
    系列
  </h3>
  <div class="series-list" data-series-list>
    {series.length > 0 ? (
      series.map((item, index) => (
        <a
          href={`/series/${item.slug}`}
          class:list={['series-item', { 'series-hidden': hasMore && index >= VISIBLE_COUNT }]}
        >
          <span class="series-name">
            {item.name}
          </span>
          <span class="series-count">
            {item.count}
          </span>
        </a>
      ))
    ) : (
      <span class="empty-text">
        暂无系列
      </span>
    )}
  </div>
  {hasMore && (
    <button class="toggle-more-btn" data-toggle-more aria-expanded="false">
      ··· 更多
    </button>
  )}
</div>

<script>
  function initSeriesToggle() {
    document.querySelectorAll<HTMLElement>('[data-series-list]').forEach((list) => {
      const card = list.closest('.tsuki-sidebar-card')
      if (!card) return
      const btn = card.querySelector<HTMLButtonElement>('[data-toggle-more]')
      if (!btn) return

      btn.addEventListener('click', () => {
        const expanded = btn.getAttribute('aria-expanded') === 'true'
        btn.setAttribute('aria-expanded', String(!expanded))
        btn.textContent = expanded ? '··· 更多' : '收起'
        list.querySelectorAll<HTMLElement>('.series-hidden').forEach((el) => {
          el.style.display = expanded ? 'none' : 'flex'
        })
      })
    })
  }

  initSeriesToggle()
  document.addEventListener('astro:page-load', initSeriesToggle)
</script>

<style>
  .series-list {
    display: flex;
    flex-direction: column;
    gap: var(--tsuki-space-0-5);
  }

  .series-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: var(--tsuki-radius-md);
    border: 1px solid var(--tsuki-surface-border);
    background: var(--tsuki-surface-muted-soft);
    padding: var(--tsuki-space-0-5) var(--tsuki-space-0-75);
    color: var(--tsuki-fg);
    text-decoration: none;
    transition: background-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
                border-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
                transform var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .series-item:hover {
    transform: translateY(var(--tsuki-translate-1px));
    border-color: var(--tsuki-theme-accent);
    background: var(--tsuki-surface-muted-strong);
  }

  .series-hidden {
    display: none;
  }

  .series-name {
    font-size: var(--tsuki-sidebar-body-text-size);
    font-weight: 500;
  }
  @media (min-width: 640px) {
    .series-name {
      font-size: var(--tsuki-sidebar-body-text-size-desktop);
    }
  }

  .series-count {
    border-radius: var(--tsuki-radius-sm-2);
    background: var(--tsuki-theme-secondary);
    padding: var(--tsuki-space-0-125) var(--tsuki-space-0-5);
    font-size: var(--tsuki-text-xs);
    color: var(--tsuki-fg);
  }
  @media (min-width: 640px) {
    .series-count {
      font-size: var(--tsuki-text-2xs);
    }
  }

  .empty-text {
    font-size: var(--tsuki-sidebar-body-text-size);
    color: var(--tsuki-post-muted-fg);
  }

  .toggle-more-btn {
    display: block;
    width: 100%;
    margin-top: var(--tsuki-space-0-5);
    padding: var(--tsuki-space-0-3) 0;
    background: none;
    border: none;
    cursor: pointer;
    font-size: var(--tsuki-sidebar-body-text-size);
    font-weight: 500;
    color: var(--tsuki-theme-accent);
    text-align: center;
    transition: opacity var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .toggle-more-btn:hover {
    opacity: 0.8;
  }
</style>
