---
import tsukiConfig from '@/config/tsuki-config'
import type { SidebarStats } from '@/lib/types/content'
import { iconRegistry, uiIcons } from '@tsuki/shared/icons'
import { toOptimizedImageUrl } from '@/lib/utils/image-url'

interface Props {
  stats?: SidebarStats
}

const { profile, stats } = tsukiConfig
const safeProfile = profile
  ? {
      ...profile,
      avatar: toOptimizedImageUrl(profile.avatar) ?? profile.avatar,
    }
  : { name: '', links: [] }
const { stats: statsData } = Astro.props

const overlayIcon = uiIcons.idCard

const isExternalLink = (url: string) => /^https?:\/\//i.test(url)
const isInlineSvg = (icon: string) => icon.trim().startsWith('<svg')
const isImageIcon = (icon: string) =>
  /^https?:\/\//i.test(icon) ||
  icon.startsWith('/') ||
  /^data:image\//i.test(icon) ||
  /\.(svg|png|jpe?g|webp|gif)$/i.test(icon)

const resolveIcon = (icon: string) => {
  if (iconRegistry[icon]) {
    return { type: 'inline', value: iconRegistry[icon] }
  }
  if (isInlineSvg(icon)) {
    return { type: 'inline', value: icon }
  }
  if (isImageIcon(icon)) {
    return { type: 'image', value: toOptimizedImageUrl(icon) ?? icon }
  }
  return { type: 'text', value: icon.slice(0, 1).toUpperCase() }
}
---

<div class="tsuki-sidebar-card profile-card">
  {
    safeProfile.avatar && (
      <a href={safeProfile.avatarLink || '#'} class="avatar-link" aria-label="查看个人资料">
        <span class="avatar-overlay" aria-hidden="true">
          <span class="overlay-icon" set:html={overlayIcon} />
        </span>
        <img
          src={safeProfile.avatar}
          alt={safeProfile.name}
          class="avatar-img"
          loading="lazy"
          decoding="async"
        />
      </a>
    )
  }
  <h2 class="profile-name">
    {safeProfile.name}
  </h2>
  {safeProfile.bio && <p class="profile-bio">{safeProfile.bio}</p>}

  {
    stats?.enable && statsData && (
      <div class="profile-stats" aria-label="站点统计">
        <div class="profile-stat-cell">
          <span class="profile-stat-label">文章</span>
          <span class="profile-stat-value">{statsData.posts.toLocaleString()}</span>
        </div>
        <div class="profile-stat-cell profile-stat-divider">
          <span class="profile-stat-label">标签</span>
          <span class="profile-stat-value">{statsData.tags.toLocaleString()}</span>
        </div>
        <div class="profile-stat-cell profile-stat-divider">
          <span class="profile-stat-label">分组</span>
          <span class="profile-stat-value">{statsData.groups.toLocaleString()}</span>
        </div>
      </div>
    )
  }

  {
    safeProfile.links && safeProfile.links.length > 0 && (
      <div class="profile-links">
        {safeProfile.links.map((link) => {
          const icon = resolveIcon(link.icon)
          return (
            <a
              href={link.url}
              target={isExternalLink(link.url) ? '_blank' : undefined}
              rel={isExternalLink(link.url) ? 'noopener noreferrer' : undefined}
              class="link-icon-btn"
              aria-label={link.name}
            >
              {icon.type === 'image' ? (
                <img
                  src={icon.value}
                  alt=""
                  class="link-icon-img"
                  loading="lazy"
                  decoding="async"
                />
              ) : icon.type === 'inline' ? (
                <span class="link-icon-svg" set:html={icon.value} />
              ) : (
                <span class="link-icon-text">{icon.value}</span>
              )}
            </a>
          )
        })}
      </div>
    )
  }
</div>

<style>
  .profile-card {
    align-items: center;
    padding: var(--tsuki-sidebar-card-padding) var(--tsuki-sidebar-card-padding-inline);
  }
  @media (min-width: 640px) {
    .profile-card {
      padding: var(--tsuki-sidebar-card-padding-compact)
        var(--tsuki-sidebar-card-padding-inline-compact);
    }
  }

  .avatar-link {
    position: relative;
    display: block;
    width: 100%;
    margin-bottom: var(--tsuki-space-lg);
    overflow: hidden;
    border-radius: var(--tsuki-radius-lg);
    text-decoration: none;
  }
  .avatar-link:focus-visible {
    outline: none;
    box-shadow:
      0 0 0 2px var(--tsuki-theme-accent),
      0 0 0 calc(2px + var(--tsuki-space-sm)) var(--tsuki-sidebar-card-bg);
  }

  .avatar-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    display: grid;
    place-items: center;
    transition: background-color var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .avatar-overlay,
  .avatar-link:focus-visible .avatar-overlay {
    background: var(--tsuki-profile-avatar-overlay);
  }

  .overlay-icon {
    opacity: 0;
    transform: scale(var(--tsuki-scale-overlay-initial));
    color: var(--tsuki-profile-avatar-overlay-icon);
    filter: drop-shadow(var(--tsuki-profile-avatar-shadow));
    transition:
      opacity var(--tsuki-motion-medium) var(--tsuki-motion-ease-out),
      transform var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .overlay-icon,
  .avatar-link:focus-visible .overlay-icon {
    opacity: 1;
    transform: scale(var(--tsuki-scale-overlay-active));
  }

  .avatar-img {
    display: block;
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .avatar-img,
  .avatar-link:focus-visible .avatar-img {
    transform: scale(var(--tsuki-scale-avatar-hover));
  }

  .profile-name {
    margin-bottom: var(--tsuki-space-sm);
    text-align: center;
    font-size: var(--tsuki-text-lg);
    font-weight: 600;
    color: var(--tsuki-fg);
  }
  @media (min-width: 640px) {
    .profile-name {
      font-size: var(--tsuki-text-xl);
    }
  }

  .profile-bio {
    margin-bottom: var(--tsuki-space-md);
    text-align: center;
    font-size: var(--tsuki-text-sm);
    line-height: var(--tsuki-line-height-snug);
    color: var(--tsuki-fg);
  }

  .profile-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    margin-bottom: var(--tsuki-space-lg);
  }

  .profile-stat-cell {
    display: grid;
    gap: var(--tsuki-space-xs);
    padding-inline: var(--tsuki-space-md);
  }

  .profile-stat-divider {
    position: relative;
  }
  .profile-stat-divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    height: var(--tsuki-space-lg);
    width: var(--tsuki-border-hairline);
    transform: translateY(-50%);
    border-radius: var(--tsuki-radius-xs);
    background: var(--tsuki-surface-border);
  }

  .profile-stat-label {
    font-size: var(--tsuki-text-2xs);
    color: var(--tsuki-fg);
  }

  .profile-stat-value {
    font-size: var(--tsuki-text-base);
    font-weight: 600;
    color: var(--tsuki-fg);
  }

  .profile-links {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--tsuki-space-sm);
  }

  .link-icon-btn {
    display: flex;
    height: var(--tsuki-icon-button-size);
    width: var(--tsuki-icon-button-size);
    align-items: center;
    justify-content: center;
    border-radius: var(--tsuki-radius-md);
    background: var(--tsuki-link-icon-bg);
    color: var(--tsuki-fg);
    box-shadow: var(--tsuki-shadow-icon);
    text-decoration: none;
    transition:
      background-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
      transform var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .link-icon-btn:hover {
    transform: translateY(-2px);
    background: var(--tsuki-link-icon-bg-hover);
  }

  .link-icon-img {
    height: var(--tsuki-icon-size-md);
    width: var(--tsuki-icon-size-md);
    object-fit: contain;
  }

  .link-icon-svg {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: var(--tsuki-text-xl);
    line-height: 1;
  }

  .link-icon-text {
    font-size: var(--tsuki-text-2xs);
    font-weight: 600;
  }
</style>
