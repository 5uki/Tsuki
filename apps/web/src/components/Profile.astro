---
import tsukiConfig from '@/config/tsuki-config'
import type { SidebarStats } from '@contracts/content'

interface Props {
  stats?: SidebarStats
}

const { profile, stats } = tsukiConfig
const safeProfile = profile ?? { name: '', links: [] }
const { stats: statsData } = Astro.props

const overlayIcon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width="52" height="52" fill="currentColor"><path d="M528 64H48C21.5 64 0 85.5 0 112v288c0 26.5 21.5 48 48 48h480c26.5 0 48-21.5 48-48V112c0-26.5-21.5-48-48-48zM96 176c0-44.2 35.8-80 80-80s80 35.8 80 80-35.8 80-80 80-80-35.8-80-80zm256 208H64v-16c0-53 43-96 96-96h32c53 0 96 43 96 96v16zm160 0H384v-64h128v64zm0-128H384v-64h128v64z"/></svg>`

const iconMap: Record<string, string> = {
  'fa6-brands:github': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
  'fa6-brands:x-twitter': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  'fa6-solid:mail': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="5" width="18" height="14" rx="2"/><path d="m4 7 8 6 8-6"/></svg>`,
  'fa6-solid:envelope': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="5" width="18" height="14" rx="2"/><path d="m4 7 8 6 8-6"/></svg>`,
}

const isExternalLink = (url: string) => /^https?:\/\//i.test(url)
const isInlineSvg = (icon: string) => icon.trim().startsWith('<svg')
const isImageIcon = (icon: string) =>
  /^https?:\/\//i.test(icon) ||
  icon.startsWith('/') ||
  /^data:image\//i.test(icon) ||
  /\.(svg|png|jpe?g|webp|gif)$/i.test(icon)

const resolveIcon = (icon: string) => {
  if (iconMap[icon]) {
    return { type: 'inline', value: iconMap[icon] }
  }
  if (isInlineSvg(icon)) {
    return { type: 'inline', value: icon }
  }
  if (isImageIcon(icon)) {
    return { type: 'image', value: icon }
  }
  return { type: 'text', value: icon.slice(0, 1).toUpperCase() }
}
---

<div class="tsuki-sidebar-card profile-card">
  {safeProfile.avatar && (
    <a
      href={safeProfile.avatarLink || '#'}
      class="avatar-link"
      aria-label="查看个人资料"
    >
      <span class="avatar-overlay" aria-hidden="true">
        <span class="overlay-icon" set:html={overlayIcon}></span>
      </span>
      <img
        src={safeProfile.avatar}
        alt={safeProfile.name}
        class="avatar-img"
      />
    </a>
  )}
  <h2 class="profile-name">
    {safeProfile.name}
  </h2>
  {safeProfile.bio && (
    <p class="profile-bio">
      {safeProfile.bio}
    </p>
  )}

  {stats?.enable && statsData && (
    <div class="profile-stats" aria-label="站点统计">
      <div class="profile-stat-cell">
        <span class="profile-stat-label">文章</span>
        <span class="profile-stat-value">{statsData.posts.toLocaleString()}</span>
      </div>
      <div class="profile-stat-cell profile-stat-divider">
        <span class="profile-stat-label">标签</span>
        <span class="profile-stat-value">{statsData.tags.toLocaleString()}</span>
      </div>
      <div class="profile-stat-cell profile-stat-divider">
        <span class="profile-stat-label">分组</span>
        <span class="profile-stat-value">{statsData.groups.toLocaleString()}</span>
      </div>
    </div>
  )}

  {safeProfile.links && safeProfile.links.length > 0 && (
    <div class="profile-links">
      {safeProfile.links.map((link) => {
        const icon = resolveIcon(link.icon)
        return (
          <a
            href={link.url}
            target={isExternalLink(link.url) ? '_blank' : undefined}
            rel={isExternalLink(link.url) ? 'noopener noreferrer' : undefined}
            class="link-icon-btn"
            aria-label={link.name}
          >
            {icon.type === 'image' ? (
              <img src={icon.value} alt="" class="link-icon-img" />
            ) : icon.type === 'inline' ? (
              <span class="link-icon-svg" set:html={icon.value}></span>
            ) : (
              <span class="link-icon-text">{icon.value}</span>
            )}
          </a>
        )
      })}
    </div>
  )}
</div>

<style>
  .profile-card {
    align-items: center;
    padding: var(--tsuki-sidebar-card-padding) var(--tsuki-sidebar-card-padding-inline);
  }
  @media (min-width: 640px) {
    .profile-card {
      padding: var(--tsuki-sidebar-card-padding-compact) var(--tsuki-sidebar-card-padding-inline-compact);
    }
  }

  .avatar-link {
    position: relative;
    display: block;
    width: 100%;
    margin-bottom: var(--tsuki-space-1);
    overflow: hidden;
    border-radius: var(--tsuki-radius-lg);
    text-decoration: none;
  }
  .avatar-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px var(--tsuki-theme-accent), 0 0 0 calc(2px + var(--tsuki-space-0-5)) var(--tsuki-sidebar-card-bg);
  }

  .avatar-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    display: grid;
    place-items: center;
    background: transparent;
    transition: background-color var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .avatar-overlay,
  .avatar-link:focus-visible .avatar-overlay {
    background: var(--tsuki-profile-avatar-overlay);
  }

  .overlay-icon {
    opacity: 0;
    transform: scale(var(--tsuki-scale-overlay-initial));
    color: var(--tsuki-profile-avatar-overlay-icon);
    filter: drop-shadow(var(--tsuki-profile-avatar-shadow));
    transition: opacity var(--tsuki-motion-medium) var(--tsuki-motion-ease-out),
                transform var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .overlay-icon,
  .avatar-link:focus-visible .overlay-icon {
    opacity: 1;
    transform: scale(var(--tsuki-scale-overlay-active));
  }

  .avatar-img {
    display: block;
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform var(--tsuki-motion-medium) var(--tsuki-motion-ease-out);
  }
  .avatar-link:hover .avatar-img,
  .avatar-link:focus-visible .avatar-img {
    transform: scale(var(--tsuki-scale-avatar-hover));
  }

  .profile-name {
    margin-bottom: var(--tsuki-space-0-5);
    text-align: center;
    font-size: var(--tsuki-text-lg);
    font-weight: 600;
    color: var(--tsuki-fg);
  }
  @media (min-width: 640px) {
    .profile-name {
      font-size: var(--tsuki-text-xl);
    }
  }

  .profile-bio {
    margin-bottom: var(--tsuki-space-0-75);
    text-align: center;
    font-size: var(--tsuki-text-sm-compact);
    line-height: var(--tsuki-line-height-snug);
    color: var(--tsuki-fg);
  }
  @media (min-width: 640px) {
    .profile-bio {
      font-size: var(--tsuki-text-sm);
    }
  }

  .profile-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    align-items: center;
    justify-content: center;
    text-align: center;
    width: 100%;
    margin-bottom: var(--tsuki-space-0-9);
  }

  .profile-stat-cell {
    display: grid;
    gap: var(--tsuki-space-0-35);
    padding-inline: var(--tsuki-space-0-75);
  }

  .profile-stat-divider {
    position: relative;
  }
  .profile-stat-divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    height: var(--tsuki-space-1);
    width: var(--tsuki-border-hairline);
    transform: translateY(-50%);
    border-radius: var(--tsuki-radius-2xs);
    background: var(--tsuki-surface-divider);
  }

  .profile-stat-label {
    font-size: var(--tsuki-text-2xs);
    color: var(--tsuki-fg);
  }

  .profile-stat-value {
    font-size: var(--tsuki-text-base);
    font-weight: 600;
    color: var(--tsuki-fg);
  }

  .profile-links {
    display: flex;
    width: 100%;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--tsuki-space-0-5);
  }

  .link-icon-btn {
    display: flex;
    height: var(--tsuki-icon-button-size);
    width: var(--tsuki-icon-button-size);
    align-items: center;
    justify-content: center;
    border-radius: var(--tsuki-radius-md);
    background: var(--tsuki-link-icon-bg);
    color: var(--tsuki-fg);
    box-shadow: var(--tsuki-shadow-icon);
    text-decoration: none;
    transition: background-color var(--tsuki-motion-fast) var(--tsuki-motion-ease-out),
                transform var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .link-icon-btn:hover {
    transform: translateY(var(--tsuki-translate-1px));
    background: var(--tsuki-link-icon-bg-hover);
  }

  .link-icon-img {
    height: var(--tsuki-icon-size-md);
    width: var(--tsuki-icon-size-md);
    object-fit: contain;
  }

  .link-icon-svg {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: var(--tsuki-text-xl);
    line-height: 1;
  }

  .link-icon-text {
    font-size: var(--tsuki-text-2xs);
    font-weight: 600;
  }
</style>
