---
import tsukiConfig from '@/config/tsuki-config'

const { profile, stats } = tsukiConfig
const safeProfile = profile ?? { name: '', links: [] }
const mockStats = {
  posts: 12,
  tags: 8,
  groups: 3,
}

const overlayIcon = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width="52" height="52" fill="currentColor"><path d="M528 64H48C21.5 64 0 85.5 0 112v288c0 26.5 21.5 48 48 48h480c26.5 0 48-21.5 48-48V112c0-26.5-21.5-48-48-48zM96 176c0-44.2 35.8-80 80-80s80 35.8 80 80-35.8 80-80 80-80-35.8-80-80zm256 208H64v-16c0-53 43-96 96-96h32c53 0 96 43 96 96v16zm160 0H384v-64h128v64zm0-128H384v-64h128v64z"/></svg>`

const iconMap: Record<string, string> = {
  'fa6-brands:github': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>`,
  'fa6-brands:x-twitter': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
  'fa6-solid:envelope': `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M1.5 8.25v8.25a2.25 2.25 0 002.25 2.25h16.5a2.25 2.25 0 002.25-2.25V8.25m-16.5 6A2.25 2.25 0 004.5 16.5h15A2.25 2.25 0 0021.75 14.25m-16.5 0V8.25m16.5 6v-6m0 6l-7.5-4.5m7.5 4.5l-7.5 4.5m-7.5-9l7.5 4.5m-7.5-4.5l7.5-4.5"/></svg>`,
}

const isExternalLink = (url: string) => /^https?:\/\//i.test(url)
const isInlineSvg = (icon: string) => icon.trim().startsWith('<svg')
const isImageIcon = (icon: string) =>
  /^https?:\/\//i.test(icon) ||
  icon.startsWith('/') ||
  /^data:image\//i.test(icon) ||
  /\.(svg|png|jpe?g|webp|gif)$/i.test(icon)

const resolveIcon = (icon: string) => {
  if (iconMap[icon]) {
    return { type: 'inline', value: iconMap[icon] }
  }
  if (isInlineSvg(icon)) {
    return { type: 'inline', value: icon }
  }
  if (isImageIcon(icon)) {
    return { type: 'image', value: icon }
  }
  return { type: 'text', value: icon.slice(0, 1).toUpperCase() }
}

function formatNumber(num: number): string {
  return num.toLocaleString()
}
---

<div class="flex flex-col items-center rounded-[var(--tsuki-sidebar-card-radius)] border border-[var(--tsuki-sidebar-card-border)] bg-[var(--tsuki-sidebar-card-bg)] p-[var(--tsuki-sidebar-card-padding)] shadow-[var(--tsuki-sidebar-card-shadow)] transition-[transform,box-shadow,border-color] duration-[140ms] ease-out hover:translate-y-[var(--tsuki-sidebar-card-hover-translate)] hover:border-[var(--tsuki-sidebar-card-border-hover)] hover:shadow-[var(--tsuki-sidebar-card-shadow-hover)] max-sm:p-[var(--tsuki-sidebar-card-padding-compact)]">
  {safeProfile.avatar && (
    <a
      href={safeProfile.avatarLink || '#'}
      class="group relative mb-4 block w-full overflow-hidden rounded-[var(--tsuki-radius-lg)] text-inherit"
      aria-label="查看个人资料"
    >
      <span
        class="absolute inset-0 grid place-items-center bg-transparent transition-[background-color] duration-200 ease-out group-hover:bg-[var(--tsuki-profile-avatar-overlay)] group-focus-visible:bg-[var(--tsuki-profile-avatar-overlay)]"
        aria-hidden="true"
      >
        <span
          class="[filter:drop-shadow(var(--tsuki-shadow-avatar-overlay))] text-[var(--tsuki-profile-avatar-overlay-icon)] opacity-0 scale-[0.92] transition-[opacity,transform] duration-200 ease-out group-hover:opacity-100 group-hover:scale-100 group-focus-visible:opacity-100 group-focus-visible:scale-100"
          set:html={overlayIcon}
        ></span>
      </span>
      <img
        src={safeProfile.avatar}
        alt={safeProfile.name}
        class="block w-full aspect-square object-cover transition-transform duration-200 ease-out group-hover:scale-[1.02] group-focus-visible:scale-[1.02]"
      />
    </a>
  )}
  <h2 class="mb-2 text-center text-[var(--tsuki-text-2xl)] font-semibold text-[var(--tsuki-fg)] max-sm:text-[var(--tsuki-text-xl)]">
    {safeProfile.name}
  </h2>
  {safeProfile.bio && (
    <p class="mb-3 text-center text-[var(--tsuki-text-base)] leading-[1.6] text-[var(--tsuki-fg)] max-sm:text-[var(--tsuki-text-sm)]">
      {safeProfile.bio}
    </p>
  )}

  {stats?.enable && (
    <div class="mb-[0.9rem] grid w-full grid-cols-3 items-center rounded-[var(--tsuki-radius-md)] bg-[var(--tsuki-profile-stats-bg)] py-2 text-center" aria-label="站点统计">
      <div class="grid gap-[0.35rem] px-3">
        <span class="text-[var(--tsuki-text-xs)] text-[var(--tsuki-fg)]">文章</span>
        <span class="text-[var(--tsuki-text-lg)] font-semibold text-[var(--tsuki-fg)]">{formatNumber(mockStats.posts)}</span>
      </div>
      <div class="grid gap-[0.35rem] border-l border-[var(--tsuki-chip-border)] px-3">
        <span class="text-[var(--tsuki-text-xs)] text-[var(--tsuki-fg)]">标签</span>
        <span class="text-[var(--tsuki-text-lg)] font-semibold text-[var(--tsuki-fg)]">{formatNumber(mockStats.tags)}</span>
      </div>
      <div class="grid gap-[0.35rem] border-l border-[var(--tsuki-chip-border)] px-3">
        <span class="text-[var(--tsuki-text-xs)] text-[var(--tsuki-fg)]">分组</span>
        <span class="text-[var(--tsuki-text-lg)] font-semibold text-[var(--tsuki-fg)]">{formatNumber(mockStats.groups)}</span>
      </div>
    </div>
  )}

  {safeProfile.links && safeProfile.links.length > 0 && (
    <div class="flex w-full flex-wrap justify-center gap-2">
      {safeProfile.links.map((link) => {
        const icon = resolveIcon(link.icon)
        return (
          <a
            href={link.url}
            target={isExternalLink(link.url) ? '_blank' : undefined}
            rel={isExternalLink(link.url) ? 'noopener noreferrer' : undefined}
            class="flex h-10 w-10 items-center justify-center rounded-[var(--tsuki-radius-md)] border border-transparent bg-[var(--tsuki-link-icon-bg)] text-[var(--tsuki-fg)] shadow-[var(--tsuki-shadow-link-icon)] transition-[background-color,border-color,transform] duration-150 ease-out hover:-translate-y-[1px] hover:border-[var(--tsuki-theme-accent)] hover:bg-[var(--tsuki-link-icon-bg-hover)]"
            aria-label={link.name}
          >
            {icon.type === 'image' ? (
              <img src={icon.value} alt="" class="h-5 w-5 object-contain" />
            ) : icon.type === 'inline' ? (
              <span class="inline-flex items-center justify-center text-[var(--tsuki-text-2xl)] leading-none" set:html={icon.value}></span>
            ) : (
              <span class="text-[var(--tsuki-text-xs)] font-semibold">{icon.value}</span>
            )}
          </a>
        )
      })}
    </div>
  )}
</div>
