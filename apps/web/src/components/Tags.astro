---
import type { SidebarCountItem } from '@contracts/content'

interface Props {
  tags: SidebarCountItem[]
}

const { tags } = Astro.props
---

<div class="tsuki-sidebar-card">
  <h3 class="tsuki-section-title">
    标签
  </h3>
  <div class="tag-list">
    {tags.length > 0 ? (
      tags.map((tag) => (
        <a href={`/tags/${tag.slug}`} class="tsuki-tag-pill">
          {tag.name}
        </a>
      ))
    ) : (
      <span class="empty-text">
        暂无标签
      </span>
    )}
  </div>
</div>

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--tsuki-space-0-5);
  }

  .empty-text {
    font-size: var(--tsuki-sidebar-body-text-size);
    color: var(--tsuki-post-muted-fg);
  }
</style>
