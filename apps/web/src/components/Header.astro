---
// 顶部导航栏组件
import { THEME_METAS } from '@tsuki/shared/theme'
import tsukiConfig from '@/config/tsuki-config'
import type { NavLink } from '@tsuki/config'

const navLinks: NavLink[] = tsukiConfig.nav ?? []
const siteTitle = tsukiConfig.site.title
---

<header class="header">
  <div class="header-inner">
    <div class="header-track">
      <div class="header-pill header-brand">
        <a href="/" class="logo">
          <img src="/favicon.svg" alt="" class="logo-favicon" width="22" height="22" />
          <span class="logo-text">{siteTitle}</span>
        </a>
      </div>

      <nav class="header-pill nav">
        {navLinks.map(link => (
          <a href={link.href}>{link.label}</a>
        ))}
      </nav>

      <div class="header-pill actions">
      <div class="mobile-left">
        <a href="/" class="logo mobile-logo">
          <img src="/favicon.svg" alt="" class="logo-favicon" width="20" height="20" />
          <span class="logo-text">{siteTitle}</span>
        </a>
      </div>

      <a href="/search" class="action-btn search-btn" aria-label="搜索">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </a>

      <div class="theme-switcher">
        <button id="theme-toggle" class="action-btn" aria-label="切换主题" aria-haspopup="true">
          <svg class="theme-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 3a9 9 0 1 0 0 18h1.2a2.3 2.3 0 0 0 2.3-2.3c0-.8-.4-1.5-1.1-1.9-.6-.4-.9-1-.9-1.7 0-1.1.9-2 2-2h2.1A5.4 5.4 0 0 0 18.6 8.4 9 9 0 0 0 12 3z"></path>
            <circle cx="8.6" cy="9.6" r="1" fill="currentColor" stroke="none"></circle>
            <circle cx="11.7" cy="7.6" r="1" fill="currentColor" stroke="none"></circle>
            <circle cx="8.1" cy="13.7" r="1" fill="currentColor" stroke="none"></circle>
          </svg>
        </button>
        <div id="theme-dropdown" class="theme-dropdown" role="menu">
          <div class="theme-dropdown-header">选择主题</div>
          {THEME_METAS.map(theme => (
            <button
              class="theme-option"
              data-theme-name={theme.id}
              style={`--theme-color: ${theme.gradientColor}; --theme-tint: ${theme.accentColor}; --theme-border: color-mix(in srgb, ${theme.accentColor} 45%, transparent);`}
              role="menuitem"
            >
              <span class="theme-preview"></span>
              <span class="theme-name">{theme.name}</span>
              <span class="theme-check">✓</span>
            </button>
          ))}
        </div>
      </div>

      <a href="/login" class="login-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
        </svg>
        <span>登录</span>
      </a>

      <div class="mobile-menu-switcher">
        <button id="mobile-menu-btn" class="action-btn mobile-menu-btn" aria-label="菜单" aria-haspopup="true">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 12h18M3 6h18M3 18h18"></path>
          </svg>
        </button>
        <nav id="mobile-nav" class="mobile-nav-dropdown" role="menu">
          {navLinks.map(link => (
            <a href={link.href} class="mobile-nav-link">{link.label}</a>
          ))}
        </nav>
      </div>
      </div>
    </div>
  </div>
</header>

<script>
  // 主题切换功能
  import { THEMES, DEFAULT_THEME, type Theme } from '@tsuki/shared/theme'
  import { createStorageAdapter } from '@adapters/storage'

  const header = document.querySelector<HTMLElement>('.header')
  const headerTrack = document.querySelector<HTMLElement>('.header-track')
  const main = document.querySelector<HTMLElement>('main.main')
  const toggle = document.getElementById('theme-toggle')
  const dropdown = document.getElementById('theme-dropdown')
  const themeOptions = document.querySelectorAll<HTMLButtonElement>('.theme-option')
  const mobileMenuBtn = document.getElementById('mobile-menu-btn')
  const mobileNav = document.getElementById('mobile-nav')
  const storage = createStorageAdapter()

  function getCurrentTheme(): Theme {
    const theme = document.documentElement.getAttribute('data-theme')
    return THEMES.includes(theme as Theme) ? (theme as Theme) : DEFAULT_THEME
  }

  function setTheme(theme: Theme) {
    document.documentElement.setAttribute('data-theme', theme)
    storage.setTheme(theme)
    updateActiveTheme()
  }

  function updateActiveTheme() {
    const current = getCurrentTheme()
    themeOptions.forEach(option => {
      const isActive = option.getAttribute('data-theme-name') === current
      option.classList.toggle('active', isActive)
    })
  }

  function toggleDropdown() {
    dropdown?.classList.toggle('open')
  }

  function closeDropdown() {
    dropdown?.classList.remove('open')
  }

  function closeMobileNav() {
    mobileNav?.classList.remove('open')
  }

  function closeAllMenus() {
    closeDropdown()
    closeMobileNav()
  }

  function updateHeaderState() {
    const isScrolled = window.scrollY > 8
    header?.classList.toggle('scrolled', isScrolled)

    // 进入主内容区域后，收起背景条与中间胶囊
    if (!main || !header) return
    const mainTop = main.getBoundingClientRect().top
    const headerHeight = header.getBoundingClientRect().height
    const trackHeight = headerTrack?.getBoundingClientRect().height ?? headerHeight
    const collapseOffset = Math.ceil(headerHeight + 24)
    header.style.setProperty('--tsuki-header-collapse-offset', `-${collapseOffset}px`)
    const collapseTriggerPx = Math.round(trackHeight - 19)
    const approachTriggerPx = collapseTriggerPx + 10
    const inMain = mainTop <= collapseTriggerPx
    const inMainApproach = mainTop <= approachTriggerPx
    header.classList.toggle('in-main-approach', inMainApproach)
    header.classList.toggle('in-main', inMain)
    if (inMainApproach) {
      closeAllMenus()
    }
  }

  // 主题切换事件
  toggle?.addEventListener('click', (e) => {
    e.stopPropagation()
    closeMobileNav()
    toggleDropdown()
  })

  themeOptions.forEach(option => {
    option.addEventListener('click', () => {
      const theme = option.getAttribute('data-theme-name') as Theme
      if (theme && THEMES.includes(theme)) {
        setTheme(theme)
        closeDropdown()
      }
    })
  })

  // 移动端菜单
  mobileMenuBtn?.addEventListener('click', (e) => {
    e.stopPropagation()
    closeDropdown()
    mobileNav?.classList.toggle('open')
  })

  // 点击外部关闭所有菜单
  document.addEventListener('click', (e) => {
    const target = e.target as Node
    if (!dropdown?.contains(target) && target !== toggle &&
        !mobileNav?.contains(target) && target !== mobileMenuBtn) {
      closeAllMenus()
    }
  })

  // 键盘关闭
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeAllMenus()
    }
  })

  // 滚动样式
  updateHeaderState()
  window.addEventListener('scroll', updateHeaderState, { passive: true })
  window.addEventListener('resize', updateHeaderState, { passive: true })

  // 初始化
  updateActiveTheme()
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: transparent;
    border-bottom: none;
    --tsuki-header-collapse-offset: -78px;
    --tsuki-header-track-duration: 220ms;
    transition: background-color 150ms;
  }

  .header-inner {
    width: 100%;
    max-width: var(--tsuki-page-width);
    margin: 0 auto;
    padding: var(--tsuki-header-inner-padding-block) var(--tsuki-page-inline-padding);
    position: relative;
  }

  .header-track {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);
    align-items: center;
    gap: clamp(1.1rem, 3vw, 2.4rem);
    position: relative;
    margin-top: calc(
      -1 * (
        var(--tsuki-header-frame-top-gap) +
        var(--tsuki-header-frame-top-overflow)
      )
    );
    margin-inline: calc(
      var(--tsuki-main-inline-padding) +
      var(--tsuki-header-card-align-offset)
    );
    padding: calc(
      var(--tsuki-header-frame-top-gap) +
      var(--tsuki-header-frame-top-overflow)
    ) var(--tsuki-header-frame-side-gap) var(--tsuki-header-frame-bottom-gap);
    border-radius: var(--tsuki-header-frame-radius);
    background: transparent;
    border: 1px solid transparent;
    box-shadow: none;
    --tsuki-header-track-shift-y: 0px;
    transform: translateY(var(--tsuki-header-track-shift-y));
    transition:
      transform var(--tsuki-header-track-duration) linear,
      background-color 160ms ease-out,
      border-color 160ms ease-out,
      box-shadow 160ms ease-out;
  }

  .header.scrolled .header-track {
    background: var(--tsuki-header-frame-bg);
    border-color: var(--tsuki-header-frame-border);
    box-shadow: var(--tsuki-header-frame-shadow);
  }

  .header-pill {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    height: var(--tsuki-header-pill-height);
    padding: 0 1.35rem;
    border-radius: 999px;
    background: transparent;
    border: 1px solid transparent;
    box-shadow: none;
    transition:
      background-color 150ms,
      border-color 150ms,
      box-shadow 150ms;
    position: relative;
    z-index: 1;
  }

  .header-pill {
    background: var(--tsuki-header-pill-bg);
    border-color: var(--tsuki-header-track-border);
    box-shadow: var(--tsuki-shadow-header);
  }

  .mobile-menu-btn {
    position: relative;
    z-index: 1;
  }

  .header-brand {
    padding: 0 1.45rem;
    justify-self: start;
    transform: translateY(0);
    transition: transform 220ms ease-out;
  }

  .nav {
    flex: 0 0 auto;
    justify-content: center;
    gap: 1.4rem;
    padding: 0 1.9rem;
    margin-inline: var(--tsuki-header-center-safe-inline);
    justify-self: center;
    transform: translateY(var(--tsuki-header-center-pill-shift-y));
    transition: transform 220ms ease-out;
  }

  .header.in-main .header-track {
    --tsuki-header-track-shift-y: var(--tsuki-header-collapse-offset);
    pointer-events: none;
  }

  .header.in-main-approach .header-track {
    pointer-events: none;
  }

  .header.in-main .theme-dropdown,
  .header.in-main .mobile-nav-dropdown {
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px) scale(0.96);
    pointer-events: none;
  }

  .actions {
    gap: 0.45rem;
    padding: 0 1.15rem;
    justify-self: end;
    position: relative;
    --tsuki-actions-base-shift-y: 0px;
    transform: translateY(var(--tsuki-actions-base-shift-y));
    transition: transform 220ms ease-out;
  }

  .logo {
    gap: 0.6rem;
    text-decoration: none;
  }

  .logo-favicon {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 0.35rem;
    flex-shrink: 0;
  }

  .mobile-left {
    display: none;
  }

  .logo-text {
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--tsuki-theme-accent);
    transition: color 150ms;
  }

  .nav {
    display: flex;
  }

  .nav a {
    color: var(--tsuki-fg);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 150ms;
    position: relative;
    padding: 0 0.35rem;
  }

  .nav a:hover {
    color: var(--tsuki-fg);
  }

  .nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--tsuki-theme-accent);
    transform: scaleX(0);
    transition: transform 150ms;
  }

  .nav a:hover::after {
    transform: scaleX(1);
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    background: none;
    border: 1px solid var(--tsuki-header-action-border);
    border-radius: 999px;
    cursor: pointer;
    color: var(--tsuki-fg);
    transition: all 150ms;
    text-decoration: none;
  }

  .logo,
  .nav a,
  .action-btn,
  .login-btn {
    height: 38px;
    display: inline-flex;
    align-items: center;
  }

  .action-btn:hover {
    background: var(--tsuki-header-action-hover-bg);
    color: var(--tsuki-fg);
    border-color: var(--tsuki-header-action-hover-border);
  }

  /* Theme Switcher */
  .theme-switcher {
    position: static;
  }

  .theme-dropdown {
    position: absolute;
    top: calc(100% + 0.85rem);
    left: 0;
    right: 0;
    width: auto;
    background: var(--tsuki-header-dropdown-bg);
    border: 1px solid var(--tsuki-header-dropdown-border);
    border-radius: 0.875rem;
    box-shadow:
      var(--tsuki-shadow-popover),
      var(--tsuki-header-dropdown-outline);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px) scale(0.96);
    transform-origin: top center;
    transition: all 200ms cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    backdrop-filter: none;
  }

  .theme-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .theme-dropdown-header {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--tsuki-fg);
    padding: 0.875rem 1rem 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-bottom: 1px solid var(--tsuki-header-dropdown-border-soft);
  }

  .theme-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.75rem 1rem;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--tsuki-fg);
    transition: all 180ms ease;
    text-align: left;
    position: relative;
    --theme-color: var(--tsuki-surface-muted);
    --theme-border: color-mix(in srgb, var(--tsuki-theme-accent) 40%, transparent);
    --theme-tint: var(--tsuki-theme-accent);
  }

  .theme-option::before {
    content: '';
    position: absolute;
    inset: 6px;
    background: linear-gradient(
      90deg,
      color-mix(in srgb, var(--theme-tint) 14%, transparent),
      color-mix(in srgb, var(--theme-tint) 4%, transparent)
    );
    border-radius: 0.5rem;
    opacity: 0;
    transition: opacity 180ms ease;
  }

  .theme-option:hover::before {
    opacity: 1;
  }

  .theme-option.active::before {
    opacity: 1;
    background: linear-gradient(
      90deg,
      color-mix(in srgb, var(--theme-tint) 22%, transparent),
      color-mix(in srgb, var(--theme-tint) 8%, transparent)
    );
  }

  .theme-preview {
    position: relative;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    flex-shrink: 0;
    border: 2px solid var(--theme-border);
    box-shadow: var(--tsuki-shadow-theme-preview);
    transition: transform 200ms ease, box-shadow 200ms ease;
    z-index: 1;
    background: var(--theme-color);
  }

  .theme-option:hover .theme-preview {
    transform: scale(1.1);
    box-shadow: var(--tsuki-shadow-theme-preview-hover);
  }

  .theme-name {
    flex: 1;
    font-weight: 500;
    z-index: 1;
    transition: color 180ms ease;
  }

  .theme-option:hover .theme-name {
    color: var(--tsuki-theme-accent);
  }

  .theme-check {
    color: var(--tsuki-theme-accent);
    opacity: 0;
    transform: scale(0.5);
    transition: all 200ms cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1;
    font-size: 0.875rem;
  }

  .theme-option.active .theme-check {
    opacity: 1;
    transform: scale(1);
  }

  /* Login Button */
  .login-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 0.95rem;
    background: var(--tsuki-login-bg);
    color: var(--tsuki-fg);
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: opacity 150ms;
    border: 1px solid var(--tsuki-login-border);
  }

  .login-btn:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  /* Mobile */
  .mobile-menu-switcher {
    position: static;
  }

  .mobile-menu-btn {
    display: none;
  }

  .mobile-nav-dropdown {
    position: absolute;
    top: calc(100% + 0.85rem);
    left: 0;
    right: 0;
    width: auto;
    background: var(--tsuki-header-dropdown-bg);
    border: 1px solid var(--tsuki-header-dropdown-border);
    border-radius: 0.875rem;
    box-shadow:
      var(--tsuki-shadow-popover),
      var(--tsuki-header-dropdown-outline);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px) scale(0.96);
    transform-origin: top center;
    transition: all 200ms cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    backdrop-filter: none;
  }

  .mobile-nav-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .mobile-nav-link {
    position: relative;
    display: block;
    padding: 0.8rem 1rem;
    color: var(--tsuki-fg);
    text-decoration: none;
    font-size: 0.9375rem;
    border-bottom: 1px solid var(--tsuki-header-dropdown-border-soft);
    transition: color 150ms, background-color 150ms;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  .mobile-nav-link:hover {
    color: var(--tsuki-theme-accent);
    background: var(--tsuki-surface-accent-soft);
  }

  @media (max-width: 768px) {
    .header {
      --tsuki-header-frame-bottom-gap: 0px;
      --tsuki-header-pill-height: 50px;
    }

    .header-brand,
    .nav {
      display: none;
    }

    .header-inner {
      padding: var(--tsuki-header-inner-padding-block) 0;
      width: 100%;
      max-width: none;
      margin: 0;
    }

    .header-track {
      grid-template-columns: 1fr;
      margin-inline: 0;
      padding-inline: 0;
    }

    .actions {
      justify-self: stretch;
      width: auto;
      min-width: calc(100% - 10px);
      margin-inline: 5px;
      height: 50px;
      padding: 0 1.05rem;
      gap: 0.45rem;
      justify-content: flex-start;
      --tsuki-actions-base-shift-y: -10px;
    }

    .mobile-left {
      display: flex;
      align-items: center;
      margin-inline-end: auto;
      min-width: 0;
    }

    .mobile-logo .logo-text {
      font-size: 1.3rem;
      line-height: 1;
      white-space: nowrap;
    }

    .mobile-logo .logo-favicon {
      width: 1.15rem;
      height: 1.15rem;
      border-radius: 0.3rem;
    }

    .actions .search-btn,
    .mobile-menu-btn {
      display: flex;
    }

    .action-btn,
    .login-btn {
      width: 36px;
      height: 36px;
    }

    .login-btn {
      padding: 0;
      justify-content: center;
      background: none;
      border: 1px solid var(--tsuki-header-action-border);
      color: var(--tsuki-fg);
    }

    .login-btn span {
      display: none;
    }

    .login-btn:hover {
      background: var(--tsuki-header-action-hover-bg);
      color: var(--tsuki-fg);
      border-color: var(--tsuki-header-action-hover-border);
    }

    .theme-dropdown,
    .mobile-nav-dropdown {
      left: auto;
      right: 0;
      width: min(16.5rem, calc((100vw - 10px) * 0.66));
      max-width: calc(100vw - 10px);
    }
  }
</style>
