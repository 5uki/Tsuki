---
// 顶部导航栏组件
import { THEME_METAS } from '@tsuki/shared/theme'
import { uiIcons } from '@tsuki/shared/icons'
import tsukiConfig from '@/config/tsuki-config'
import type { NavLink } from '@tsuki/config'

const navLinks: NavLink[] = tsukiConfig.nav ?? []
const siteTitle = tsukiConfig.site.title
---

<header class="header">
  <div class="header-inner">
    <div class="header-track">
      <div class="header-pill header-brand">
        <a href="/" class="logo">
          <img src="/favicon.svg" alt="" class="logo-favicon" width="22" height="22" />
          <span class="logo-text">{siteTitle}</span>
        </a>
      </div>

      <nav class="header-pill nav">
        {navLinks.map(link => (
          <a href={link.href}>
            {link.icon && <span class="nav-icon" set:html={link.icon} />}
            {link.label}
          </a>
        ))}
      </nav>

      <div class="header-pill actions">
      <div class="mobile-left">
        <a href="/" class="logo mobile-logo">
          <img src="/favicon.svg" alt="" class="logo-favicon" width="20" height="20" />
          <span class="logo-text">{siteTitle}</span>
        </a>
      </div>

      <button class="action-btn search-btn" data-search-open aria-label="搜索">
        <span set:html={uiIcons.search} />
      </button>

      <div class="theme-switcher">
        <button id="theme-toggle" class="action-btn" aria-label="切换主题" aria-haspopup="true">
          <span class="theme-icon" set:html={uiIcons.palette} />
        </button>
        <div id="theme-dropdown" class="theme-dropdown" role="menu">
          <div class="theme-dropdown-header">选择主题</div>
          {THEME_METAS.map(theme => (
            <button
              class="theme-option"
              data-theme-name={theme.id}
              style={`--theme-color: ${theme.gradientColor}; --theme-tint: ${theme.accentColor}; --theme-border: color-mix(in srgb, ${theme.accentColor} 45%, transparent);`}
              role="menuitem"
            >
              <span class="theme-preview"></span>
              <span class="theme-name">{theme.name}</span>
              <span class="theme-check">✓</span>
            </button>
          ))}
        </div>
      </div>

      <a href="/login" class="login-btn" aria-label="登录">
        <span class="login-icon" set:html={uiIcons.githubLogin} />
        <span class="login-text">登录</span>
      </a>

      <div class="mobile-menu-switcher">
        <button id="mobile-menu-btn" class="action-btn mobile-menu-btn" aria-label="菜单" aria-haspopup="true">
          <span set:html={uiIcons.menu} />
        </button>
        <nav id="mobile-nav" class="mobile-nav-dropdown" role="menu">
          {navLinks.map(link => (
            <a href={link.href} class="mobile-nav-link">
              {link.icon && <span class="nav-icon" set:html={link.icon} />}
              {link.label}
            </a>
          ))}
        </nav>
      </div>
      </div>
    </div>
  </div>
</header>

<script>
  // 主题切换功能
  import { THEMES, DEFAULT_THEME, type Theme } from '@tsuki/shared/theme'
  import { setTheme as storageSetTheme } from '@/lib/storage'

  interface TsukiWindow extends Window {
    __tsukiHeaderCleanup?: () => void
    __tsukiHeaderBootBound?: boolean
  }

  const tsukiWindow = window as TsukiWindow

  function bindHeaderInteractions() {
    const header = document.querySelector<HTMLElement>('.header')
    const headerTrack = document.querySelector<HTMLElement>('.header-track')
    const banner = document.querySelector<HTMLElement>('.tsuki-banner')
    const toggle = document.getElementById('theme-toggle')
    const dropdown = document.getElementById('theme-dropdown')
    const themeOptions = document.querySelectorAll<HTMLButtonElement>('.theme-option')
    const mobileMenuBtn = document.getElementById('mobile-menu-btn')
    const mobileNav = document.getElementById('mobile-nav')

    if (!header || !headerTrack) {
      return () => {}
    }
    const headerEl = header

    const controller = new AbortController()
    const signal = controller.signal

    function getCurrentTheme(): Theme {
      const theme = document.documentElement.getAttribute('data-theme')
      return THEMES.includes(theme as Theme) ? (theme as Theme) : DEFAULT_THEME
    }

    function setTheme(theme: Theme) {
      document.documentElement.setAttribute('data-theme', theme)
      storageSetTheme(theme)
      updateActiveTheme()
    }

    function updateActiveTheme() {
      const current = getCurrentTheme()
      themeOptions.forEach(option => {
        const isActive = option.getAttribute('data-theme-name') === current
        option.classList.toggle('active', isActive)
      })
    }

    function closeAllMenus() {
      dropdown?.classList.remove('open')
      mobileNav?.classList.remove('open')
    }

    function updateHeaderState() {
      const scrollTop = window.scrollY
      const isScrolled = scrollTop > 8
      headerEl.classList.toggle('scrolled', isScrolled)

      if (!banner) return

      // 与 Firefly 一致：用绝对滚动位置判断，不用 getBoundingClientRect
      // threshold = banner 高度 - 88px（navbar 高度余量）
      const threshold = banner.offsetHeight - 88

      const inMain = scrollTop >= threshold
      const inMainApproach = scrollTop >= threshold - 40
      headerEl.classList.toggle('in-main-approach', inMainApproach)
      headerEl.classList.toggle('in-main', inMain)
      if (inMainApproach) {
        closeAllMenus()
      }
    }

    toggle?.addEventListener('click', (e) => {
      e.stopPropagation()
      mobileNav?.classList.remove('open')
      dropdown?.classList.toggle('open')
    }, { signal })

    themeOptions.forEach(option => {
      option.addEventListener('click', () => {
        const theme = option.getAttribute('data-theme-name') as Theme
        if (theme && THEMES.includes(theme)) {
          setTheme(theme)
          dropdown?.classList.remove('open')
        }
      }, { signal })
    })

    mobileMenuBtn?.addEventListener('click', (e) => {
      e.stopPropagation()
      dropdown?.classList.remove('open')
      mobileNav?.classList.toggle('open')
    }, { signal })

    document.addEventListener('click', (e) => {
      const target = e.target as Node
      if (!dropdown?.contains(target) && target !== toggle &&
          !mobileNav?.contains(target) && target !== mobileMenuBtn) {
        closeAllMenus()
      }
    }, { signal })

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeAllMenus()
      }
    }, { signal })

    updateHeaderState()
    window.addEventListener('scroll', updateHeaderState, { passive: true, signal })
    window.addEventListener('resize', updateHeaderState, { passive: true, signal })
    updateActiveTheme()

    return () => controller.abort()
  }

  function bootHeaderInteractions() {
    tsukiWindow.__tsukiHeaderCleanup?.()
    tsukiWindow.__tsukiHeaderCleanup = bindHeaderInteractions()
  }

  if (!tsukiWindow.__tsukiHeaderBootBound) {
    document.addEventListener('astro:page-load', bootHeaderInteractions)
    tsukiWindow.__tsukiHeaderBootBound = true
  }

  bootHeaderInteractions()
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    --tsuki-header-collapse-offset: -78px;
    --tsuki-header-track-duration: 220ms;
    transition: background-color 150ms,
                opacity 150ms cubic-bezier(0.4, 0, 0.2, 1),
                transform 150ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .header-inner {
    width: 100%;
    margin: 0 auto;
    padding-block: var(--tsuki-header-inner-padding-block);
    padding-inline: 0;
    position: relative;
  }

  .header-track {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);
    align-items: center;
    gap: clamp(1.1rem, 3vw, 2.4rem);
    position: relative;
    margin-top: calc(
      -1 * (
        var(--tsuki-header-frame-top-gap) +
        var(--tsuki-header-frame-top-overflow)
      )
    );
    margin-inline: calc((100% + 3 * var(--tsuki-sidebar-gap)) / 7);
    padding: calc(
      var(--tsuki-header-frame-top-gap) +
      var(--tsuki-header-frame-top-overflow)
    ) var(--tsuki-header-frame-side-gap) var(--tsuki-header-frame-bottom-gap);
    border-radius: var(--tsuki-header-frame-radius);
    --tsuki-header-track-shift-y: 0px;
    transform: translateY(var(--tsuki-header-track-shift-y));
    transition:
      transform var(--tsuki-header-track-duration) linear,
      background-color 160ms ease-out,
      border-color 160ms ease-out,
      box-shadow 160ms ease-out;
  }

  .header.scrolled .header-track {
    background: var(--tsuki-header-frame-bg);
    border-color: var(--tsuki-header-frame-border);
    box-shadow: var(--tsuki-header-frame-shadow);
  }

  .header-pill {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    height: var(--tsuki-header-pill-height);
    padding: 0 1.35rem;
    border-radius: 999px;
    background: var(--tsuki-header-pill-bg);
    border: 1px solid var(--tsuki-header-track-border);
    box-shadow: var(--tsuki-shadow-header);
    transition: background-color 150ms, border-color 150ms, box-shadow 150ms;
    position: relative;
    z-index: 1;
  }

  .mobile-menu-btn {
    position: relative;
    z-index: 1;
  }

  .header-brand {
    padding: 0 1.45rem;
    justify-self: start;
    transform: translateY(0);
    transition: transform 220ms ease-out;
  }

  .nav {
    display: flex;
    flex: 0 0 auto;
    justify-content: center;
    gap: 1.4rem;
    padding: 0 1.9rem;
    margin-inline: var(--tsuki-header-center-safe-inline);
    justify-self: center;
    transform: translateY(var(--tsuki-header-center-pill-shift-y));
    transition: transform 220ms ease-out;
  }

  .header.in-main {
    opacity: 0;
    transform: translateY(-4rem);
    pointer-events: none;
  }

  .header.in-main .theme-dropdown,
  .header.in-main .mobile-nav-dropdown {
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px) scale(0.96);
    pointer-events: none;
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    padding: 0 1.15rem;
    justify-self: end;
    position: relative;
    --tsuki-actions-base-shift-y: 0px;
    transform: translateY(var(--tsuki-actions-base-shift-y));
    transition: transform 220ms ease-out;
  }

  .logo {
    gap: 0.6rem;
    text-decoration: none;
  }

  .logo-favicon {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 0.35rem;
    flex-shrink: 0;
  }

  .mobile-left {
    display: none;
  }

  .logo-text {
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--tsuki-accent-text);
    transition: color 150ms;
  }

  .nav a {
    color: var(--tsuki-fg);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 600;
    transition: color 150ms;
    position: relative;
    padding: 0 0.35rem;
    gap: 0.35rem;
  }

  .nav-icon {
    display: inline-flex;
    align-items: center;
    flex-shrink: 0;
    opacity: 0.7;
    transition: opacity 150ms;
  }

  .nav-icon :global(svg) {
    width: 16px;
    height: 16px;
  }

  .nav a:hover .nav-icon {
    opacity: 1;
  }

  .nav a:hover {
    color: var(--tsuki-fg);
  }

  .nav a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--tsuki-theme-accent);
    transform: scaleX(0);
    transition: transform 150ms;
  }

  .nav a:hover::after {
    transform: scaleX(1);
  }

  .action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    background: none;
    border: 1px solid var(--tsuki-header-action-border);
    border-radius: 999px;
    cursor: pointer;
    color: var(--tsuki-fg);
    transition: all 150ms;
    text-decoration: none;
  }

  .action-btn > span {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo,
  .nav a,
  .action-btn,
  .login-btn {
    height: 38px;
    display: inline-flex;
    align-items: center;
  }

  .action-btn:hover {
    background: var(--tsuki-header-action-hover-bg);
    color: var(--tsuki-fg);
    border-color: var(--tsuki-header-action-hover-border);
  }

  /* Theme Switcher */
  .theme-switcher {
    position: static;
  }

  .theme-dropdown,
  .mobile-nav-dropdown {
    position: absolute;
    top: calc(100% + 0.85rem);
    left: 0;
    right: 0;
    width: auto;
    background: var(--tsuki-header-dropdown-bg);
    border: 1px solid var(--tsuki-header-dropdown-border);
    border-radius: 0.875rem;
    box-shadow:
      var(--tsuki-shadow-popover),
      var(--tsuki-header-dropdown-outline);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px) scale(0.96);
    transform-origin: top center;
    transition: all 200ms cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
  }

  .theme-dropdown.open,
  .mobile-nav-dropdown.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }

  .theme-dropdown-header {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--tsuki-fg);
    padding: 0.875rem 1rem 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    border-bottom: 1px solid var(--tsuki-header-dropdown-border-soft);
  }

  .theme-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    width: 100%;
    padding: 0.75rem 1rem;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 0.875rem;
    color: var(--tsuki-fg);
    transition: all 180ms ease;
    text-align: left;
    position: relative;
    --theme-color: var(--tsuki-surface-muted);
    --theme-border: color-mix(in srgb, var(--tsuki-theme-accent) 40%, transparent);
    --theme-tint: var(--tsuki-theme-accent);
  }

  .theme-option::before {
    content: '';
    position: absolute;
    inset: 6px;
    background: linear-gradient(
      90deg,
      color-mix(in srgb, var(--theme-tint) 14%, transparent),
      color-mix(in srgb, var(--theme-tint) 4%, transparent)
    );
    border-radius: 0.5rem;
    opacity: 0;
    transition: opacity 180ms ease;
  }

  .theme-option:hover::before {
    opacity: 1;
  }

  .theme-option.active::before {
    opacity: 1;
    background: linear-gradient(
      90deg,
      color-mix(in srgb, var(--theme-tint) 22%, transparent),
      color-mix(in srgb, var(--theme-tint) 8%, transparent)
    );
  }

  .theme-preview {
    position: relative;
    width: 22px;
    height: 22px;
    border-radius: 50%;
    flex-shrink: 0;
    border: 2px solid var(--theme-border);
    box-shadow: var(--tsuki-shadow-theme-preview);
    transition: transform 200ms ease, box-shadow 200ms ease;
    z-index: 1;
    background: var(--theme-color);
  }

  .theme-option:hover .theme-preview {
    transform: scale(1.1);
    box-shadow: var(--tsuki-shadow-theme-preview-hover);
  }

  .theme-name {
    flex: 1;
    font-weight: 500;
    z-index: 1;
    transition: color 180ms ease;
  }

  .theme-option:hover .theme-name {
    color: var(--tsuki-theme-accent);
  }

  .theme-check {
    color: var(--tsuki-theme-accent);
    opacity: 0;
    transform: scale(0.5);
    transition: all 200ms cubic-bezier(0.34, 1.56, 0.64, 1);
    z-index: 1;
    font-size: 0.875rem;
  }

  .theme-option.active .theme-check {
    opacity: 1;
    transform: scale(1);
  }

  /* Login Button */
  .login-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 0.95rem;
    background: var(--tsuki-login-bg);
    color: var(--tsuki-fg);
    border-radius: 999px;
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: opacity 150ms;
    border: 1px solid var(--tsuki-login-border);
  }

  .login-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .login-btn:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  /* Mobile */
  .mobile-menu-switcher {
    position: static;
  }

  .mobile-menu-btn {
    display: none;
  }

  .mobile-nav-link {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.8rem 1rem;
    color: var(--tsuki-fg);
    text-decoration: none;
    font-size: 0.9375rem;
    border-bottom: 1px solid var(--tsuki-header-dropdown-border-soft);
    transition: color 150ms, background-color 150ms;
  }

  .mobile-nav-link .nav-icon {
    opacity: 0.6;
  }

  .mobile-nav-link:hover .nav-icon {
    opacity: 1;
  }

  .mobile-nav-link:last-child {
    border-bottom: none;
  }

  .mobile-nav-link:hover {
    color: var(--tsuki-theme-accent);
    background: var(--tsuki-surface-accent);
  }

  @media (max-width: 768px) {
    .header {
      --tsuki-header-frame-bottom-gap: 0px;
      --tsuki-header-pill-height: 50px;
    }

    .header-brand,
    .nav {
      display: none;
    }

    .header-inner {
      padding: var(--tsuki-header-inner-padding-block) 0;
      width: 100%;
      max-width: none;
      margin: 0;
    }

    .header-track {
      grid-template-columns: 1fr;
      margin-inline: 0;
      padding-inline: 0;
    }

    .actions {
      justify-self: stretch;
      width: auto;
      min-width: calc(100% - 10px);
      margin-inline: 5px;
      height: 50px;
      padding: 0 1.05rem;
      gap: 0.45rem;
      justify-content: flex-start;
      --tsuki-actions-base-shift-y: -10px;
    }

    .mobile-left {
      display: flex;
      align-items: center;
      margin-inline-end: auto;
      min-width: 0;
    }

    .mobile-logo .logo-text {
      font-size: 1.3rem;
      line-height: 1;
      white-space: nowrap;
    }

    .mobile-logo .logo-favicon {
      width: 1.15rem;
      height: 1.15rem;
      border-radius: 0.3rem;
    }

    .actions .search-btn,
    .mobile-menu-btn {
      display: flex;
    }

    .action-btn,
    .login-btn {
      width: 36px;
      height: 36px;
    }

    .login-btn {
      padding: 0;
      justify-content: center;
      background: none;
      border: 1px solid var(--tsuki-header-action-border);
      color: var(--tsuki-fg);
    }

    .login-btn .login-text {
      display: none;
    }

    .login-btn:hover {
      background: var(--tsuki-header-action-hover-bg);
      color: var(--tsuki-fg);
      border-color: var(--tsuki-header-action-hover-border);
    }

    .theme-dropdown,
    .mobile-nav-dropdown {
      left: auto;
      right: 0;
      width: min(16.5rem, calc((100vw - 10px) * 0.66));
      max-width: calc(100vw - 10px);
    }
  }
</style>
