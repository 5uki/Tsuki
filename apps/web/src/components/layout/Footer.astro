---
import tsukiConfig from '@/config/tsuki-config'

const siteTitle = tsukiConfig.site.title
const year = new Date().getFullYear()
---

<footer class="site-footer">
  <div class="footer-inner">
    <p class="footer-copy">&copy; {year} {siteTitle}. All rights reserved.</p>
    <nav class="footer-nav">
      <a href="/rss.xml" class="footer-link" data-no-swup rel="alternate" type="application/rss+xml"
        >RSS</a
      >
      <a href="/sitemap.xml" class="footer-link" data-no-swup>Sitemap</a>
    </nav>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid var(--tsuki-surface-border);
    transition: color var(--tsuki-motion-fast);
  }

  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--tsuki-content-width);
    margin-inline: auto;
    padding: var(--tsuki-space-2xl) var(--tsuki-space-lg);
    font-size: var(--tsuki-text-sm);
    color: var(--tsuki-fg);
  }

  .footer-copy {
    margin: 0;
  }

  .footer-nav {
    display: flex;
    gap: var(--tsuki-space-lg);
  }

  .footer-link {
    color: var(--tsuki-fg);
    text-decoration: none;
    transition: color var(--tsuki-motion-fast);
  }
  .footer-link:hover {
    color: var(--tsuki-theme-accent);
  }
</style>
