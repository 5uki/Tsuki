---
import Base from './Base.astro'
import Header from '@/components/Header.astro'
import Banner from '@/components/Banner.astro'
import Footer from '@/components/Footer.astro'
import tsukiConfig from '@/config/tsuki-config'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
}

const siteTitle = tsukiConfig.site.title
const rawTitle = Astro.props.title?.trim()
const title = rawTitle ? `${rawTitle} - ${siteTitle}` : siteTitle
const description = Astro.props.description ?? tsukiConfig.site.description
const { noindex } = Astro.props

const isHome = Astro.url.pathname === '/'
---

<Base title={title} description={description} noindex={noindex}>
  <div class="layout">
    <Header />
    {isHome && <Banner />}
    <main class="main">
      <slot />
    </main>
    <Footer />
  </div>
</Base>

<style>
  .layout {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: var(--tsuki-top-bg);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: 0 0;
  }

  .main {
    flex: 1;
    width: 100%;
    max-width: var(--tsuki-content-width, 48rem);
    margin: 0 auto;
    padding: 2rem 1rem;
  }
</style>
