---
import Base from './Base.astro'
import Header from '@/components/Header.astro'
import Banner from '@/components/Banner.astro'
import Footer from '@/components/Footer.astro'
import BackToTop from '@/components/BackToTop.astro'
import MainLayout from '@/components/MainLayout.astro'
import tsukiConfig from '@/config/tsuki-config'
import { createAppContext } from '@entry/index'
import { getSidebarData } from '@usecases/content'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
  withSidebar?: boolean
  hasRightSidebar?: boolean
}

const siteTitle = tsukiConfig.site.title
const rawTitle = Astro.props.title?.trim()
const title = rawTitle ? `${rawTitle} - ${siteTitle}` : siteTitle
const description = Astro.props.description ?? tsukiConfig.site.description
const { noindex, hasRightSidebar = false } = Astro.props

const withSidebar = Astro.props.withSidebar ?? true
const ctx = createAppContext()
const sidebarData = withSidebar ? await getSidebarData(ctx) : null

let rightHtml: string | null = null
if (hasRightSidebar && Astro.slots.has('right')) {
  rightHtml = await Astro.slots.render('right')
}
---

<Base title={title} description={description} noindex={noindex}>
  <div class="page-shell">
    <Header />
    <Banner />
    <div class="page-body">
      <main class="page-main">
        {withSidebar ? (
          <MainLayout sidebarData={sidebarData || undefined} hasRightSidebar={!!rightHtml}>
            <slot />
            {rightHtml && (
              <Fragment slot="right" set:html={rightHtml} />
            )}
          </MainLayout>
        ) : (
          <slot />
        )}
      </main>
      <Footer />
    </div>
    <BackToTop />
  </div>
</Base>

<style>
  .page-shell {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  .page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
    background: var(--tsuki-theme-gradient);
  }

  .page-main {
    margin-inline: auto;
    width: 100%;
    flex: 1;
    padding: var(--tsuki-space-2) var(--tsuki-space-5px);
  }
  @media (min-width: 768px) {
    .page-main {
      padding-inline: 0;
    }
  }
</style>
