---
import Base from './Base.astro'
import Header from '@/components/layout/Header.astro'
import Banner from '@/components/layout/Banner.astro'
import Footer from '@/components/layout/Footer.astro'
import BackToTop from '@/components/layout/BackToTop.astro'
import SearchModal from '@/components/content/SearchModal.astro'
import LoginModal from '@/components/layout/LoginModal.astro'
import SakuraEffect from '@/components/layout/SakuraEffect.astro'
import MainLayout from '@/components/layout/MainLayout.astro'
import MusicCard from '@/components/sidebar/MusicCard.astro'
import CalendarCard from '@/components/sidebar/CalendarCard.astro'
import tsukiConfig from '@/config/tsuki-config'
import { getSidebarData, getCalendarDataForCurrentMonth, getCalendarIndex } from '@/lib/content'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
  withSidebar?: boolean
  ogType?: string
  ogImage?: string
  ogArticle?: {
    publishedTime?: string
    modifiedTime?: string
    author?: string
    tags?: string[]
  }
}

const siteTitle = tsukiConfig.site.title
const rawTitle = Astro.props.title?.trim()
const title = rawTitle ? `${rawTitle} - ${siteTitle}` : siteTitle
const description = Astro.props.description ?? tsukiConfig.site.description
const { noindex, ogType, ogImage, ogArticle } = Astro.props

const withSidebar = Astro.props.withSidebar ?? true
const sidebarData = withSidebar ? await getSidebarData() : null

const hasCustomRight = Astro.slots.has('right')
const rightHtml = hasCustomRight ? await Astro.slots.render('right') : null

const needsCalendar = withSidebar && !hasCustomRight
const calendarData = needsCalendar ? await getCalendarDataForCurrentMonth() : null
const calendarIndex = needsCalendar ? await getCalendarIndex() : null
---

<Base title={title} description={description} noindex={noindex} ogType={ogType} ogImage={ogImage} ogArticle={ogArticle}>
  <slot name="head" slot="head" />
  <div class="page-shell">
    <Header />
    <Banner />
    <div class="page-body">
      <main class="page-main">
        {withSidebar ? (
          <MainLayout sidebarData={sidebarData ?? undefined}>
            <slot />
            <Fragment slot="right">
              <MusicCard />
              {rightHtml ? (
                <div class="right-sticky-zone">
                  <Fragment set:html={rightHtml} />
                </div>
              ) : (
                calendarData && calendarIndex && (
                  <CalendarCard calendarData={calendarData} calendarIndex={calendarIndex} />
                )
              )}
            </Fragment>
          </MainLayout>
        ) : (
          <div class="nosidebar-zone">
            <div id="swup" class="transition-main">
              <slot />
            </div>
            <div id="swup-right" style="display:none"></div>
          </div>
        )}
      </main>
      <Footer />
    </div>
    <BackToTop />
    <SearchModal />
    <LoginModal />
    <SakuraEffect />
  </div>
</Base>

<style>
  .page-shell {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  .page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
    background: var(--tsuki-theme-gradient);
  }

  .page-main {
    margin-inline: auto;
    width: 100%;
    flex: 1;
    padding: var(--tsuki-space-3xl) 5px;
  }
  @media (min-width: 768px) {
    .page-main {
      padding-inline: 0;
    }
  }

  @media (min-width: 768px) {
    .right-sticky-zone {
      position: sticky;
      top: 1.5rem;
    }
  }
</style>
