---
import Base from './Base.astro'
import Header from '@/components/Header.astro'
import Banner from '@/components/Banner.astro'
import Footer from '@/components/Footer.astro'
import tsukiConfig from '@/config/tsuki-config'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
}

const siteTitle = tsukiConfig.site.title
const rawTitle = Astro.props.title?.trim()
const title = rawTitle ? `${rawTitle} - ${siteTitle}` : siteTitle
const description = Astro.props.description ?? tsukiConfig.site.description
const { noindex } = Astro.props

const isHome = Astro.url.pathname === '/'
---

<Base title={title} description={description} noindex={noindex}>
  <div class="layout flex min-h-screen flex-col bg-[var(--tsuki-theme-gradient)] bg-[position:0_0] bg-[length:100%_100%] bg-no-repeat">
    <Header />
    {isHome && <Banner />}
    <main class="main mx-auto w-full flex-1 px-[var(--tsuki-main-inline-padding)] py-[var(--tsuki-space-8)] max-md:px-[5px]">
      <slot />
    </main>
    <Footer />
  </div>
</Base>
