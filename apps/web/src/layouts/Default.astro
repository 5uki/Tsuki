---
import Base from './Base.astro'
import Header from '@/components/Header.astro'
import Banner from '@/components/Banner.astro'
import Footer from '@/components/Footer.astro'
import BackToTop from '@/components/BackToTop.astro'
import SearchModal from '@/components/SearchModal.astro'
import MainLayout from '@/components/MainLayout.astro'
import MusicCard from '@/components/MusicCard.astro'
import CalendarCard from '@/components/CalendarCard.astro'
import tsukiConfig from '@/config/tsuki-config'
import { createAppContext } from '@entry/index'
import { getSidebarData, getCalendarDataForCurrentMonth, getCalendarIndex } from '@usecases/content'

interface Props {
  title?: string
  description?: string
  noindex?: boolean
  withSidebar?: boolean
}

const siteTitle = tsukiConfig.site.title
const rawTitle = Astro.props.title?.trim()
const title = rawTitle ? `${rawTitle} - ${siteTitle}` : siteTitle
const description = Astro.props.description ?? tsukiConfig.site.description
const { noindex } = Astro.props

const withSidebar = Astro.props.withSidebar ?? true
const ctx = createAppContext()
const sidebarData = withSidebar ? await getSidebarData(ctx) : null

const hasCustomRight = Astro.slots.has('right')
let rightHtml: string | null = null
if (hasCustomRight) {
  rightHtml = await Astro.slots.render('right')
}

const calendarData = withSidebar && !hasCustomRight ? await getCalendarDataForCurrentMonth(ctx) : null
const calendarIndex = withSidebar && !hasCustomRight ? await getCalendarIndex(ctx) : null
---

<Base title={title} description={description} noindex={noindex}>
  <div class="page-shell">
    <Header />
    <Banner />
    <div id="swup" class="transition-main">
      <div class="page-body transition-leaving">
        <main class="page-main">
          {withSidebar ? (
            <MainLayout sidebarData={sidebarData || undefined}>
              <slot />
              <Fragment slot="right">
                <MusicCard />
                {rightHtml ? (
                  <div class="right-sticky-zone">
                    <Fragment set:html={rightHtml} />
                  </div>
                ) : (
                  calendarData && calendarIndex && (
                    <CalendarCard calendarData={calendarData} calendarIndex={calendarIndex} />
                  )
                )}
              </Fragment>
            </MainLayout>
          ) : (
            <slot />
          )}
        </main>
        <Footer />
      </div>
    </div>
    <BackToTop />
    <SearchModal />
  </div>
</Base>

<style>
  .page-shell {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  .page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
    background: var(--tsuki-theme-gradient);
  }

  .page-main {
    margin-inline: auto;
    width: 100%;
    flex: 1;
    padding: var(--tsuki-space-2) var(--tsuki-space-5px);
  }
  @media (min-width: 768px) {
    .page-main {
      padding-inline: 0;
    }
  }

  @media (min-width: 768px) {
    .right-sticky-zone {
      position: sticky;
      top: 1.5rem;
    }
  }
</style>
