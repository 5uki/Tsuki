---
import Default from '@/layouts/Default.astro'

const query = Astro.url.searchParams.get('q') || ''
---

<Default title="鎼滅储" description="鎼滅储鏂囩珷" noindex={true}>
  <h1>鎼滅储</h1>

  <form class="search-form" method="get">
    <input
      type="search"
      name="q"
      value={query}
      placeholder="杈撳叆鍏抽敭璇嶆悳绱?.."
      class="search-input"
    />
    <button type="submit" class="search-button">鎼滅储</button>
  </form>

  {query ? (
    <section class="results">
      <h2>鎼滅储缁撴灉锛?{query}"</h2>
      <p class="placeholder">鏈壘鍒扮浉鍏冲唴瀹?/p>
    </section>
  ) : (
    <p class="hint">璇疯緭鍏ュ叧閿瘝杩涜鎼滅储</p>
  )}
</Default>

<style>
  h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .search-form {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .search-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid color-mix(in srgb, var(--tsuki-theme-secondary) 64%, #ffffff);
    border-radius: 0.5rem;
    font-size: 1rem;
    background: color-mix(in srgb, #ffffff 72%, var(--tsuki-theme-secondary) 28%);
    color: var(--tsuki-fg);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--tsuki-theme-accent);
  }

  .search-button {
    padding: 0.75rem 1.5rem;
    background: var(--tsuki-theme-accent);
    color: var(--tsuki-color-on-primary);
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
  }

  .search-button:hover {
    opacity: 0.9;
  }

  .results h2 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .placeholder,
  .hint {
    color: #0b0b0b;
    font-style: italic;
  }
</style>
