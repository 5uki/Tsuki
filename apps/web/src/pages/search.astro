---
import Default from '@/layouts/Default.astro'

const query = Astro.url.searchParams.get('q') || ''
---

<Default title="搜索" description="搜索文章" noindex={true}>
  <h1 class="tsuki-page-title">搜索</h1>

  <form class="search-form" method="get">
    <input
      type="search"
      name="q"
      value={query}
      placeholder="输入关键词搜索..."
      class="search-input"
    />
    <button type="submit" class="search-btn">
      搜索
    </button>
  </form>

  {query ? (
    <section>
      <h2 class="results-title">搜索结果: "{query}"</h2>
      <p class="tsuki-empty-state">未找到相关内容</p>
    </section>
  ) : (
    <p class="tsuki-empty-state">请输入关键词进行搜索</p>
  )}
</Default>

<style>
  .search-form {
    display: flex;
    gap: var(--tsuki-space-0-5);
    margin-bottom: var(--tsuki-space-2);
  }

  .search-input {
    flex: 1;
    border-radius: var(--tsuki-radius-md);
    border: 1px solid var(--tsuki-surface-border);
    background: var(--tsuki-surface-muted);
    padding: var(--tsuki-space-0-75) var(--tsuki-space-1);
    font-size: var(--tsuki-text-base);
    color: var(--tsuki-fg);
  }
  .search-input:focus-visible {
    border-color: var(--tsuki-theme-accent);
    outline: none;
  }

  .search-btn {
    border: none;
    border-radius: var(--tsuki-radius-md);
    background: var(--tsuki-theme-accent);
    padding: var(--tsuki-space-0-75) var(--tsuki-space-1-5);
    font-size: var(--tsuki-text-base);
    color: var(--tsuki-color-on-primary);
    cursor: pointer;
    transition: opacity var(--tsuki-motion-fast) var(--tsuki-motion-ease-out);
  }
  .search-btn:hover {
    opacity: 0.9;
  }

  .results-title {
    margin-bottom: var(--tsuki-space-1);
    font-size: var(--tsuki-text-lg);
  }
</style>
