---
import Default from '@/layouts/Default.astro'

const query = Astro.url.searchParams.get('q') || ''
---

<Default title="搜索" description="搜索文章" noindex={true}>
  <h1>搜索</h1>

  <form class="search-form" method="get">
    <input
      type="search"
      name="q"
      value={query}
      placeholder="输入关键词搜索..."
      class="search-input"
    />
    <button type="submit" class="search-button">搜索</button>
  </form>

  {query ? (
    <section class="results">
      <h2>搜索结果："{query}"</h2>
      <p class="placeholder">未找到相关内容</p>
    </section>
  ) : (
    <p class="hint">请输入关键词进行搜索</p>
  )}
</Default>

<style>
  h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .search-form {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .search-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid var(--tsuki-border);
    border-radius: 0.5rem;
    font-size: 1rem;
    background: var(--tsuki-bg);
    color: var(--tsuki-fg);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--tsuki-primary);
  }

  .search-button {
    padding: 0.75rem 1.5rem;
    background: var(--tsuki-primary);
    color: var(--tsuki-color-on-primary);
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    cursor: pointer;
  }

  .search-button:hover {
    opacity: 0.9;
  }

  .results h2 {
    font-size: 1.125rem;
    margin-bottom: 1rem;
  }

  .placeholder,
  .hint {
    color: var(--tsuki-muted);
    font-style: italic;
  }
</style>
