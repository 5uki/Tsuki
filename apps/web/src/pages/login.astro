---
import Default from '@/layouts/Default.astro'
import { uiIcons } from '@tsuki/shared/icons'

const redirect = Astro.url.searchParams.get('redirect') || '/'
const API_BASE = import.meta.env.PUBLIC_TSUKI_API_BASE || 'http://localhost:8787/v1'
const loginUrl = `${API_BASE}/auth/github/start?return_to=${encodeURIComponent(redirect)}`
---

<Default title="登录" description="通过 GitHub 登录" withSidebar={false}>
  <div class="login-page">
    <div class="login-card">
      <h1 class="login-title">登录</h1>
      <p class="login-desc">使用 GitHub 账号登录以发表评论</p>

      <div id="login-logged-in" class="login-logged-in" style="display: none;">
        <div class="login-avatar-row">
          <img id="login-avatar" class="login-user-avatar" src="" alt="" width="48" height="48" />
          <div class="login-user-info">
            <span id="login-username" class="login-username"></span>
            <span class="login-status">已登录</span>
          </div>
        </div>
        <a href={redirect} class="login-back-btn">返回</a>
      </div>

      <div id="login-not-logged-in">
        <a href={loginUrl} class="github-login-btn">
          <span class="github-login-icon" set:html={uiIcons.githubLogin} />
          <span>使用 GitHub 登录</span>
        </a>
      </div>
    </div>
  </div>
</Default>

<script>
  const API_BASE = import.meta.env.PUBLIC_TSUKI_API_BASE || 'http://localhost:8787/v1'

  async function checkLoginState() {
    try {
      const res = await fetch(`${API_BASE}/auth/me`, { credentials: 'include' })
      if (!res.ok) return
      const result = await res.json()
      if (!result.ok || !result.data) return

      const user = result.data
      const loggedIn = document.getElementById('login-logged-in')
      const notLoggedIn = document.getElementById('login-not-logged-in')
      const avatar = document.getElementById('login-avatar') as HTMLImageElement | null
      const username = document.getElementById('login-username')

      if (loggedIn && notLoggedIn) {
        notLoggedIn.style.display = 'none'
        loggedIn.style.display = 'block'
      }
      if (avatar) {
        avatar.src = user.avatar_url
        avatar.alt = user.login
      }
      if (username) {
        username.textContent = user.login
      }
    } catch {
      // Ignore errors, show login button
    }
  }

  document.addEventListener('astro:page-load', () => {
    checkLoginState()
  })
  checkLoginState()
</script>

<style>
  .login-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 50vh;
    padding: var(--tsuki-space-3xl);
  }

  .login-card {
    background: var(--tsuki-sidebar-card-bg);
    border: 1px solid var(--tsuki-surface-border);
    border-radius: var(--tsuki-radius-lg);
    padding: var(--tsuki-space-3xl) var(--tsuki-space-4xl);
    max-width: 420px;
    width: 100%;
    text-align: center;
  }

  .login-title {
    font-size: var(--tsuki-text-2xl);
    font-weight: 600;
    color: var(--tsuki-fg);
    margin: 0 0 var(--tsuki-space-sm);
  }

  .login-desc {
    font-size: var(--tsuki-text-sm);
    color: var(--tsuki-muted-fg);
    margin: 0 0 var(--tsuki-space-2xl);
  }

  .github-login-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--tsuki-space-sm);
    padding: var(--tsuki-space-md) var(--tsuki-space-2xl);
    background: var(--tsuki-btn-github-bg);
    color: var(--tsuki-btn-github-fg);
    border: none;
    border-radius: var(--tsuki-radius-md);
    font-size: var(--tsuki-text-base);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: background var(--tsuki-motion-fast);
  }

  .github-login-btn:hover {
    background: var(--tsuki-btn-github-bg-hover);
    text-decoration: none;
    color: var(--tsuki-btn-github-fg);
  }

  .github-login-icon {
    display: flex;
    align-items: center;
  }

  .login-logged-in {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--tsuki-space-xl);
  }

  .login-avatar-row {
    display: flex;
    align-items: center;
    gap: var(--tsuki-space-md);
  }

  .login-user-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }

  .login-user-info {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--tsuki-space-3xs);
  }

  .login-username {
    font-size: var(--tsuki-text-base);
    font-weight: 600;
    color: var(--tsuki-fg);
  }

  .login-status {
    font-size: var(--tsuki-text-sm);
    color: var(--tsuki-muted-fg);
  }

  .login-back-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--tsuki-space-sm) var(--tsuki-space-2xl);
    background: var(--tsuki-login-bg);
    color: var(--tsuki-accent-text);
    border: 1px solid var(--tsuki-login-border);
    border-radius: var(--tsuki-radius-md);
    font-size: var(--tsuki-text-sm);
    font-weight: 500;
    text-decoration: none;
    transition: opacity var(--tsuki-motion-fast);
  }

  .login-back-btn:hover {
    opacity: 0.8;
    text-decoration: none;
  }
</style>
