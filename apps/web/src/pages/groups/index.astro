---
import Default from '@/layouts/Default.astro'
---

<Default title="分组" description="所有分组（分类与系列）">
  <h1>分组</h1>

  <section class="categories">
    <h2>分类</h2>
    <p class="placeholder">暂无分类</p>
  </section>

  <section class="series">
    <h2>系列</h2>
    <p class="placeholder">暂无系列</p>
  </section>
</Default>

<style>
  h1 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--tsuki-border);
  }

  .categories,
  .series {
    margin-bottom: 2rem;
  }

  .placeholder {
    color: var(--tsuki-muted);
    font-style: italic;
  }
</style>
