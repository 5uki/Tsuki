<style>
  .posts-section {
    margin-bottom: 2rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    display: flex;
    gap: 1.25rem;
    align-items: stretch;
    padding: 1rem;
    border-radius: var(--tsuki-sidebar-card-radius);
    border: 1px solid var(--tsuki-sidebar-card-border);
    background: var(--tsuki-sidebar-card-bg);
    box-shadow: var(--tsuki-sidebar-card-shadow);
    transition:
      transform 130ms cubic-bezier(0.22, 1, 0.36, 1),
      box-shadow 140ms ease-out,
      border-color 130ms ease-out;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(var(--tsuki-sidebar-card-hover-translate));
    box-shadow: var(--tsuki-sidebar-card-shadow-hover);
    border-color: var(--tsuki-sidebar-card-border-hover);
  }

  .post-cover-link {
    display: block;
    order: 2;
    width: clamp(210px, 26vw, 340px);
    flex: 0 0 auto;
    border-radius: 0.9rem;
    overflow: hidden;
    border: 1px solid color-mix(in srgb, color-mix(in srgb, var(--tsuki-theme-secondary) 64%, #ffffff) 70%, transparent);
    align-self: center;
    text-decoration: none;
    isolation: isolate;
  }

  .post-cover {
    width: 100%;
    height: 100%;
    min-height: 176px;
    max-height: 220px;
    object-fit: cover;
    display: block;
    transition: transform 220ms ease;
  }

  .post-card:hover .post-cover {
    transform: scale(1.03);
  }

  .post-main {
    order: 1;
    min-width: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
    justify-content: center;
  }

  .post-title {
    margin: 0;
    line-height: 1.35;
    font-size: clamp(1.35rem, 2vw, 2rem);
    font-weight: 700;
    color: #0b0b0b;
  }

  .post-title a {
    color: inherit;
    text-decoration: none;
    transition: color 130ms ease-out;
  }

  .post-title a:hover {
    color: var(--tsuki-theme-accent);
    text-decoration: none;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 0.7rem;
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.34rem 0.58rem;
    border-radius: 0.52rem;
    background: color-mix(in srgb, var(--tsuki-theme-secondary) 85%, #fff);
    color: #0b0b0b;
    font-size: 0.95rem;
    line-height: 1;
    border: 1px solid color-mix(in srgb, var(--tsuki-theme-secondary) 88%, #fff);
  }

  .meta-pin {
    color: var(--tsuki-theme-accent);
    font-weight: 600;
  }

  .meta-icon {
    line-height: 1;
    font-size: 0.98rem;
  }

  .post-summary {
    margin: 0;
    color: #0b0b0b;
    font-size: 1.05rem;
    line-height: 1.65;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.98rem;
    color: #0b0b0b;
    background: color-mix(in srgb, var(--tsuki-theme-secondary) 92%, #fff);
    padding: 0.18rem 0.52rem;
    border-radius: 0.52rem;
    text-decoration: none;
    border: 1px solid color-mix(in srgb, var(--tsuki-theme-secondary) 88%, #fff);
    transition: transform 120ms ease-out, filter 120ms ease-out, color 120ms ease-out;
  }

  .tag:hover {
    transform: translateY(-1px);
    filter: brightness(0.98);
    color: var(--tsuki-theme-accent);
    text-decoration: none;
  }

  .post-card:not(.has-cover) .post-main {
    gap: 0.8rem;
  }

  @media (max-width: 768px) {
    .post-card {
      flex-direction: column;
      padding: 0;
      gap: 0;
    }

    .post-cover-link {
      order: 1;
      width: 100%;
      border-radius: 1rem 1rem 0 0;
      border-left: 0;
      border-right: 0;
      border-top: 0;
    }

    .post-cover {
      min-height: 188px;
      max-height: 228px;
    }

    .post-main {
      order: 2;
      padding: 1.02rem 1rem 0.95rem;
      gap: 0.78rem;
    }

    .post-title {
      font-size: 1.18rem;
    }

    .post-summary {
      -webkit-line-clamp: 2;
      font-size: 0.98rem;
      line-height: 1.6;
    }

    .meta-item,
    .tag {
      font-size: 0.9rem;
    }
  }
</style>
